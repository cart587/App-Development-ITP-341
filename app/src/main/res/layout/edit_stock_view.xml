<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/custom_adapater_padding"
    android:paddingStart="@dimen/custom_adapater_padding"
    android:paddingTop="@dimen/custom_adapater_padding">

        <!--Product Name row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEditProductName"
                android:text="@string/product_name"
                android:textSize="@dimen/listView_text_size"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/editProductName"
                android:text="Galaxy S5"
                android:textSize="@dimen/listView_text_size"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!--Brand Row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/brand"
                android:textSize="@dimen/listView_text_size" />

            <TextView
                android:id="@+id/editTextBrand"
                android:text="Samsung"
                android:textSize="@dimen/listView_text_size"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--Price Row-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/price"
                android:textSize="@dimen/listView_text_size" />

            <EditText
                android:id="@+id/editTextPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minWidth="@dimen/editText_min_width" />
        </RelativeLayout>

        <!--Color Row-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/color"
                android:textSize="@dimen/listView_text_size" />

            <EditText
                android:id="@+id/editTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minWidth="@dimen/editText_min_width" />
        </RelativeLayout>

        <!--Stock Row-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/stock"
                android:textSize="@dimen/listView_text_size" />

            <EditText
                android:id="@+id/editTextStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minWidth="@dimen/editText_min_width" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:paddingTop="16dp" android:paddingBottom="16dp">
            <Button
                android:id="@+id/ButtonBuyStock"
                android:text="@string/buy_stock"
                android:background="@color/baby_blue"
                android:layout_marginEnd="@dimen/button_margins"
                android:layout_marginBottom="@dimen/button_margins"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height" />

            <Button
                android:id="@+id/ButtonSellStock"
                android:text="@string/sell_stock"
                android:background="@color/baby_blue"
                android:layout_marginStart="@dimen/button_margins"
                android:layout_marginBottom="@dimen/button_margins"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height" />
        </LinearLayout>

        <Button
            android:id="@+id/ButtonSellAll"
            android:text="@string/sell_all"
            android:background="@color/baby_blue"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height" />

        <Button
            android:id="@+id/ButtonDeleteItem"
            android:text="@string/delete_item"
            android:background="@color/light_red"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height" />
</LinearLayout>